<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.OnlineMarket" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/logo</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:layoutDirection">rtl</item>
        <item name="fontFamily">@font/iran_sans</item>
<!--        <item name="appBarLayoutStyle">@style/myAppBar</item>-->
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/high_gray_background</item>
        <!-- Customize your theme here. -->

    </style>

<!--    <style name="myAppBar" parent="Widget.MaterialComponents.AppBarLayout.Primary">
        <item name="android:textSize">40sp</item>
    </style>-->

    <style name="theme.splashTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:isSticky">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/background_splash</item>
        <item name="android:layoutDirection">rtl</item>

    </style>
</resources>